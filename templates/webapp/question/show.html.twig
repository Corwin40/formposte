{% extends 'admin.html.twig' %}

{% block title %}Question{% endblock %}

{% block content %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ question.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ question.slug }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ question.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('webapp_question_index') }}">back to list</a>

    <a href="{{ path('webapp_question_edit', {'id': question.id}) }}">edit</a>

    {{ include('webapp/question/_delete_form.html.twig') }}
{% endblock %}
